{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "ESnext",
    "jsx": "react",
    "target": "ESnext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~src/*":  ["src/*"],
      "~components/*": ["src/components/*"],
      "~pages/*": ["src/pages/*"],
    },
    "typeRoots": [
      "./node_modules/@types",
    ],
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["cypress"]
}
